# Use an official base image
FROM condaforge/mambaforge:4.10.3-9

USER root

# Set a working directory
WORKDIR /app

RUN mamba install curl bzip2 samtools -c conda-forge -c bioconda -y

# Download and extract BWA MEM2
RUN curl -L https://github.com/bwa-mem2/bwa-mem2/releases/download/v2.2.1/bwa-mem2-2.2.1_x64-linux.tar.bz2 \
    | tar jxf -

# Add BWA MEM2 to PATH
ENV PATH="/app/bwa-mem2-2.2.1_x64-linux:${PATH}"


