nextflow_workflow {

    name "Test Workflow ParseFastqPairs"
    script "contents/subwf/setup/parseParams/parseFastqPairs.nf"
    workflow "ParseFastqPairs"
    tag "priority1"

    test("fastqPairs") {

        when {
            params {
                fastqPairs = "$baseDir/tests/assets/fastq/1k/1k_Formaldehyde+DSG_DdeI_and_DpnII_HFFc6_BR1_TR1_R{1,2}.fastq.gz"
            }
            workflow {
                """
                input[0] = Channel.empty()
                """
            }
        }

        then {
            assert workflow.success
            with (workflow.out.samples.get(0)) {
                f1 = file(fastq1)
                f2 = file(fastq2)

                assert f1.getName() == "1k_Formaldehyde+DSG_DdeI_and_DpnII_HFFc6_BR1_TR1_R1.fastq.gz"
                assert f1.exists()
                assert f2.getName() == "1k_Formaldehyde+DSG_DdeI_and_DpnII_HFFc6_BR1_TR1_R2.fastq.gz"
                assert f2.exists()
            }
        }
    }

    test("fastqPairsMissing") {

        when {
            params {
                fastqPairs = "$baseDir/tests/null"
            }
            workflow {
                """
                input[0] = Channel.empty()
                """
            }
        }

        then {
            assert workflow.failed
        }
    }

}
