nextflow_workflow {

    name "Test Workflow QCPairs"
    script "contents/subwf/reads/QCPairs/workflow.nf"
    workflow "QCPairs"

    test("SmokeTest_QCPairs") {
        options "-stub-run"
        tag "priority1"
        
        when {
            workflow {
                """
                input[0] = channel.of(
                    [id: "1", pairs: file("1.pairs")],
                    [id: "2", pairs: file("2.pairs")]
                )
                input[1] = ["pairs"]
                input[2] = "test"
                """
            }
        }

        then {
            assert workflow.success
            with (workflow.out.samples) {
                assert size() == 2
                def expected = [
                    [id: "1", pairs: "1.pairs"],
                    [id: "2", pairs: "2.pairs"]
                ]
                def observed = [get(0), get(1)]
                observed.collect {
                    it = [id: it.id, pairs: file(it.pairs).name]
                    assert it in expected
                }
            }
        }

    }

}
