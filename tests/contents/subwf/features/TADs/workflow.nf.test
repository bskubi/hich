nextflow_workflow {

    name "Test Workflow TADs"
    script "contents/subwf/features/TADs/workflow.nf"
    workflow "TADs"

    test("SmokeTest_TADs") {
        tag "10to60s"
        when {
            params {
                sampleSelectionStrategies = [
                    strategy1: [:]
                ]
                tads = [
                    plan1: [
                        sampleSelectionStrategy: ["strategy1"],
                        resolution: 100000,
                        hicExplorerFindTADsParams: "--minDepth 400000 --maxDepth 1000000 --step 100000 --chromosomes chr19 --correctForMultipleTesting bonferroni"
                    ]
                ]
            }
            workflow {
                """
                matrix = file("$projectDir/tests/assets/downloads/mcool/full/GSM4604274_629.iced.mcool")
                samples = [
                    [id: "1", mcool: matrix]
                ]
                input[0] = channel.fromList(samples)
                """
            }
        }

        then {
            assert workflow.success
        }

    }

}
