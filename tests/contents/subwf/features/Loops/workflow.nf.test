nextflow_workflow {

    name "Test Workflow Loops"
    script "contents/subwf/features/Loops/workflow.nf"
    workflow "Loops"

    test("SmokeTest_Loops") {
        tag "priority1"
        when {
            params {
                sampleSelectionStrategies = [
                    strategy: [:]
                ]
                loops = [
                    plan: [
                        sampleSelectionStrategy: ["strategy"],
                        mustacheParams: ["-r 100000 -ch chr19"]
                    ]
                ]
            }
            workflow {
                """
                matrix = file("$projectDir/tests/assets/downloads/mcool/full/GSM4604274_629.iced.mcool")
                samples = [
                    [id: "1", latestMatrix: matrix]
                ]
                input[0] = channel.fromList(samples)
                """
            }
        }

        then {
            assert workflow.success
        }

    }

}
