
nextflow_function {

    name "Test Functions"
    script "contents/subwf/util/files.nf"
    tag "priority1"
    
    test("smartFileFinder_missing") {

        function "smartFileFinder"

        when {
            function {
                """
                input[0] = "missing.txt"
                """
            }
        }

        then {
            assert function.success
            assert function.result == "$projectDir/missing.txt"
        }

    }

}